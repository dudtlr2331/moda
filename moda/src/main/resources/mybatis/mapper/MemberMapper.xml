<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.moda.moda.member.dao.MemberDao">
    <!--  회원가입 -->
    <insert id="saveMember" parameterType="com.moda.moda.member.MemberVO">
        INSERT INTO users
        (U_NUM,
         U_ID,
         U_PASS,
         U_NAME,
         U_EMAIL,
         U_POST,
         U_ADDR,
         U_PHONE,
         U_DATE,
         U_ADMIN)
        VALUES
            (null,
             #{uId},
             #{uPass},
             #{uName},
             #{uEmail},
             #{uPost},
             #{uAddr},
             #{uPhone},
             #{uDate},
             '0');
    </insert>

    <!-- 회원 수 카운팅 (ID 중복 체크) -->
    <select id="countById" parameterType="string" resultType="int">
        SELECT
            COUNT(*)
        FROM
            users
        WHERE
            U_ID = #{value}
    </select>

    <!--  로그인 확인  -->
    <select id="matchMember" parameterType="com.moda.moda.member.MemberVO" resultType="int">
        SELECT
            COUNT(*)
        FROM
            users
        WHERE
            U_ID = #{uId}
        AND
            U_PASS = #{uPass}
    </select>

    <!-- id로 회원 정보 찾기 -->
    <select id="findById" parameterType="string" resultType="com.moda.moda.member.MemberVO">
        SELECT
            *
        FROM
            users
        WHERE
            U_ID = #{value}
    </select>

    <update id="modMember" parameterType="com.moda.moda.member.MemberVO">
        UPDATE users
        SET
            U_PASS = #{uPass},
            U_NAME = #{uName},
            U_EMAIL = #{uEmail},
            U_POST = #{uPost},
            U_ADDR = #{uAddr},
            U_PHONE = #{uPhone}
        WHERE
            U_ID = #{uId}
    </update>
</mapper>