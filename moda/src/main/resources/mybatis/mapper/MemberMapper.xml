<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moda.moda.member.dao.MemberDao">
    <!-- tb_member 테이블 전체 컬럼 -->
    <sql id="memberColumns">
        u_id
        , u_pass
        , u_name
        , u_email
        , u_post
        , u_addr
        , u_phone
        , u_date
        , u_admin
    </sql>

    <!-- 회원 정보 저장 (회원가입) -->
    <insert id="save" parameterType="com.moda.moda.member.MemberSearch" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (
        <include refid="memberColumns" />
        ) VALUES (
        #{uId}
        , #{uPass}
        , #{uName}
        , #{uEmail}
        , #{uPost}
        , #{uAddr}
        , #{uPhone}
        , NOW()
        , NULL
        )
    </insert>

    <!-- 회원 상세정보 조회 -->
    <select id="findById" parameterType="string" resultType="com.moda.moda.member.MemberDto">
        SELECT
        <include refid="memberColumns" />
        FROM
        users
        WHERE
        u_id = #{value}
    </select>

    <!-- 회원 정보 수정 -->
    <update id="update" parameterType="com.moda.moda.member.MemberSearch">
        UPDATE users
        SET
        u_name = #{uName}
        , u_email = #{uEmail}
        , u_post = #{uPost}
        , u_addr = #{uAddr}
        , u_phone = #{uPhone}
        , u_date = NOW()
        WHERE
        u_id = #{uId}
    </update>

    <!-- 회원 정보 삭제 (회원 탈퇴) -->
    <delete id="deleteById" parameterType="string">
        DELETE
        FROM users
        WHERE
            u_id = #{uId}
    </delete>

    <!-- ID 중복 체크 -->
    <select id="chkById" parameterType="string" resultType="int">
        SELECT
            COUNT(*)
        FROM
            users
        WHERE
            u_id = #{value}
    </select>

</mapper>